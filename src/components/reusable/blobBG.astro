---
import blob1 from "../../assets/blobs/business/blob1.svg";
import blob2 from "../../assets/blobs/business/blob2.svg";
import blob3 from "../../assets/blobs/business/blob3.svg";
import blob4 from "../../assets/blobs/business/blob4.svg";
import blob5 from "../../assets/blobs/business/blob5.svg";

const rand = Math.floor(Math.random() * 5) + 1;

switch (rand) {
  default:
    var background = blob1;
    break;
  case 1:
    var background = blob1;
    break;
  case 2:
    var background = blob2;
    break;
  case 3:
    var background = blob3;
    break;
  case 4:
    var background = blob4;
    break;
  case 5:
    var background = blob5;
    break;
}
---

<img
  class="fixed top-0 left-0 w-[100%] h-[100%] z-[-1] blur-[75px]"
  id="background"
  src={background.src}
  alt=""
  fetchpriority="high"
/><!--  -->
